# Frontend .env.example
# This file contains all environment variables needed for Spartan Edge frontend
# Copy this to .env.local and fill in your actual values
# DO NOT commit real secrets - use your deployment platform to store production secrets

# ============================================
# REQUIRED - Application & Database
# ============================================
NODE_ENV=development
# PostgreSQL connection string - format: postgres://user:password@host:port/database
DATABASE_URL=postgres://user:password@localhost:5432/spartan_dev

NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Spartan Edge

# ============================================
# REQUIRED - Firebase Configuration (Client-side)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============================================
# REQUIRED - Firebase Admin (Server-side)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="your-private-key-content"
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# ============================================
# REQUIRED - AI & Image Processing
# ============================================
GEMINI_API_KEY=your-gemini-api-key
PERSONAL_SHOPPER_GEMINI_KEY=your-personal-shopper-gemini-key
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# NanoBanana API (Image generation)
NANOBANANA_URL=https://api.nanobanana.com
NANOBANANA_API_KEY=your-nanobanana-key

# ============================================
# REQUIRED - Payment Processing (MercadoPago)
# ============================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_WEBHOOK_SECRET=your-mercadopago-webhook-secret
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=APP_USR-your-public-key

# ============================================
# REQUIRED - Storage & Cache
# ============================================
# Cloudflare R2 / AWS S3 (Avatars)
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=avatars
R2_REGION=auto

# Redis Cache (Upstash)
REDIS_URL=https://your-upstash-redis-url.upstash.io
REDIS_TOKEN=your-redis-token
UPSTASH_REDIS_REST_URL=https://your-upstash-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================
# OPTIONAL - Security & Validation
# ============================================
UPLOAD_API_KEYS=key1,key2,key3
ALLOWED_UPLOAD_ORIGINS=http://localhost:3000,https://spartan.com

# ============================================
# OPTIONAL - Moderation & Vision
# ============================================
GOOGLE_VISION_API_KEY=your-google-vision-key
GOOGLE_VISION_SERVICE_ACCOUNT_PATH=path/to/google-vision-sa.json
GOOGLE_VISION_TIMEOUT=8000

# ============================================
# OPTIONAL - Email
# ============================================
BREVO_API_KEY=your-brevo-api-key

# ============================================
# OPTIONAL - Image Configuration
# ============================================
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
MIN_IMAGE_WIDTH=512
MIN_IMAGE_HEIGHT=512
MAX_IMAGE_WIDTH=4096
MAX_IMAGE_HEIGHT=4096

# ============================================
# OPTIONAL - Credits System
# ============================================
CREDIT_COST_ANALYSIS=1
CREDIT_COST_GENERATION=1
STARTING_CREDITS=999
ENFORCE_CREDITS=true

# ============================================
# OPTIONAL - Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_ITERATIONS=50
RATE_LIMIT_WINDOW=3600

# ============================================
# OPTIONAL - AI Configuration
# ============================================
AI_ANALYSIS_TIMEOUT=45000
AI_GENERATION_TIMEOUT=60000
AI_MAX_RETRIES=2
AI_RETRY_DELAY=2000
AI_CIRCUIT_THRESHOLD=5
AI_CIRCUIT_RESET=30000

# ============================================
# OPTIONAL - Cache Configuration
# ============================================
CACHE_ENABLED=true
CACHE_TTL=604800

# ============================================
# OPTIONAL - Compliance & Privacy
# ============================================
DELETE_IMAGES_AFTER=false
IMAGE_RETENTION_DAYS=30
PRIVACY_MODE=false

# ============================================
# OPTIONAL - Features
# ============================================
MODERATION_ENABLED=true
WATERMARK_ENABLED=true
ANALYTICS_ENABLED=false

# ============================================
# OPTIONAL - Monitoring & Debugging
# ============================================
MONITORING_ENABLED=false
SENTRY_DSN=
LOG_LEVEL=info
